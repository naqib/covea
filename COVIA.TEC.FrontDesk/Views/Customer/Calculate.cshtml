@model COVIA.TEC.Domain.AssuredDetail

@{
    ViewData["Title"] = "Calculate";
}

<div>
    <h5>Result:</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SumAssured)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SumAssured)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GrassPermium)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GrassPermium)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description);
        </dt>

        @if (Model.GrassPermium == 0)
        {
            <dd class="col-sm-10 text-danger">
                @Html.DisplayFor(model => model.Description)
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        }

    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
